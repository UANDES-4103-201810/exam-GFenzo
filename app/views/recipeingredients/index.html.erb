<p id="notice"><%= notice %></p>

<h1>Recipeingredients</h1>

<table>
  <thead>
    <tr>
      <th>Recipe</th>
      <th>Ingredient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipeingredients.each do |recipeingredient| %>
      <tr>
        <td><%= recipeingredient.recipe %></td>
        <td><%= recipeingredient.ingredient %></td>
        <td><%= link_to 'Show', recipeingredient %></td>
        <td><%= link_to 'Edit', edit_recipeingredient_path(recipeingredient) %></td>
        <td><%= link_to 'Destroy', recipeingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

